{
    "workbench.colorTheme": "Brackets Light Pro",
    "workbench.colorCustomizations": {
        "window.activeBorder": "#afd4e8",
        "window.inactiveBorder": "#878787",
        "panel.border": "#878787",
        "sideBar.border": "#878787",
        "sideBarSectionHeader.border": "#878787"
    },
    "go.lintOnSave": "package",
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "--fast",
        "-c",
        "/Users/piotrpersona//developer/.golangci.yaml"
    ],
    "editor.formatOnSave": true,
    "go.testTimeout": "1m",
    "go.useLanguageServer": true,
    "gopls": {
        "formatting.gofumpt": true,
    },
    "go.toolsManagement.autoUpdate": true,
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[css]": {
        "editor.tabSize": 2
    },
    "[tailwindcss]": {
        "editor.tabSize": 2
    },
    "[javascriptreact]": {
        "editor.tabSize": 2
    },
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.iconTheme": "icons",
    "terminal.integrated.scrollback": 5000,
    "workbench.preferredDarkColorTheme": "Nord",
    "workbench.preferredHighContrastLightColorTheme": "Brackets Light Pro",
    "workbench.preferredLightColorTheme": "Brackets Light Pro",
    "window.autoDetectColorScheme": true,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 300,
    "tabnine.experimentalAutoImports": true,
    "[python]": {
        "editor.formatOnType": true
    },
    "editor.lineNumbers": "relative"
}